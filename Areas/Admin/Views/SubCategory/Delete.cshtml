@model SubCategory
@using Spice.Extensions
@using Microsoft.CodeAnalysis
@{
    ViewData["Title"] = "Delete Subcategory";

}

<br />
<h2 class="text-info">Delete Subcategory</h2>
<br />

<div class="border backgroundWhite rounded">
    <form method="post" asp-action="Delete">
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Name" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input readonly asp-for="Name" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Category.Name" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input readonly asp-for="Category.Name" class="form-control"/>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-5 offset-2">
                <partial name="_DeleteAndBackToListButton" model=Model.Id />
            </div></div>
    </form>
</div>